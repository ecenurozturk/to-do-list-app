<p id="notice"><%= notice %></p>
 
<h2 class="to_do_list_title"><%= @to_do_list.title %></h2>
<p class="to_do_list_sub_title"><%= @to_do_list.description %></p>

<div id="to_do_items_wrapper">
	<%= render @to_do_list.to_do_items %>
	<div id="form">
		<%= render "to_do_items/form" %>
	</div>
</div>

<div class="links">
	<%= link_to 'Edit', edit_to_do_list_path(@to_do_list) %> |
	<%= link_to 'Delete', to_do_list_path(@to_do_list), method: :delete, data: { confirm: "Are you sure?" }
 %> |
  <%= link_to 'Back', to_do_lists_path %>
</div>
